<h1 class="text-center">Eat-Da-Burger!</h1>

<br>

<div class="text-center">
  <img src="../public/assets/images/burger.png">
</div>

<br>

<div class="container">
  <div class="row">
    <div class='col-6 text-center'>
      <h2>Waiting to be devoured...</h2>
      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block devoured=true}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class='col-6 text-center'>
      <h2>Devoured!</h2>
      <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block devoured=false}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>

<h2 class="text-center">Add a Burger</h2>

<div class="text-center">
  <form class="create-form">

    <div class="form-group">
      <label for="burger">Burger Name:</label>
      <input type="text" id="burger" name="burger">
    </div>

    <button type="submit">Add Burger</button>

  </form>
</div>